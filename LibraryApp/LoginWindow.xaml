<Window x:Class="LibraryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="220" Width="320">

    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="LoginBox" Margin="0 0 0 10" />
            <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10"/>
            <Button Content="Войти" Click="Login_Click" Margin="0 0 0 10"/>
            <Button Content="Регистрация" Click="Register_Click"/>
            <TextBlock x:Name="Status" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>